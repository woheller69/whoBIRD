<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_theme_dark_surface"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/icon_large" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="WebViewLayout">
            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:scrollbars="none" />
            <ImageButton
                android:id="@+id/webview_reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:backgroundTint="?attr/colorSecondary"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_reload_24dp"
                android:onClick="reload"/>
            <TextView
                android:id="@+id/webview_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:background="@color/dark_blue_gray700"
                android:paddingHorizontal="3dp"
                android:layout_marginEnd="10dp"
                android:textColor="@android:color/white"
                android:textSize="9dp" />
            <TextView
                android:id="@+id/webview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/webview_url"
                android:layout_alignParentEnd="true"
                android:background="@color/md_theme_dark_surface"
                android:paddingHorizontal="3dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:textColor="@color/md_theme_dark_primary"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/webview_latinname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/webview_name"
                android:layout_alignParentEnd="true"
                android:background="@color/md_theme_dark_surface"
                android:paddingHorizontal="3dp"
                android:layout_marginEnd="10dp"
                android:textStyle="italic"
                android:textIsSelectable="true"
                android:textColor="@color/md_theme_dark_primary"
                android:textSize="10dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress_horizontal"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleHorizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:textColor="@color/md_theme_dark_primary"
                android:textSize="18dp"
                android:singleLine="true"
                android:id="@+id/gps"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/oval_holo_orange_dark_thin"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <CheckBox
                        android:id="@+id/check_ignore_meta"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/md_theme_dark_primary"
                        android:textColor="@color/md_theme_dark_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/md_theme_dark_primary"
                        android:textSize="20dp"
                        android:id="@+id/check_ignore_meta_text"
                        android:text="@string/ignore_gps_date" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start">
                    <CheckBox
                        android:id="@+id/check_show_images"
                        android:checked="false"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/md_theme_dark_primary"
                        android:textColor="@color/md_theme_dark_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/md_theme_dark_primary"
                        android:textSize="20dp"
                        android:id="@+id/check_show_images_text"
                        android:text="@string/show_images" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/md_theme_dark_primary"
                android:textSize="22dp"
                android:id="@+id/text1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/md_theme_dark_primary"
                android:textSize="22dp"
                android:id="@+id/text2"/>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="5dp"
        app:fabAlignmentMode="center">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            app:itemIconTint="@color/md_theme_dark_primary"
            app:itemTextColor="@color/md_theme_dark_primary"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_bar"
            android:background="@drawable/background_transparent" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_pause_24dp"
        app:tint="@color/md_theme_dark_primary"
        app:layout_anchor="@id/bottomAppBar" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>